<Window x:Class="AngryBirdsWPF.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Angry Birds Clone" Height="450" Width="800">
    <Canvas x:Name="GameCanvas" Background="SkyBlue" 
            MouseDown="GameCanvas_MouseDown" 
            MouseMove="GameCanvas_MouseMove" 
            MouseUp="GameCanvas_MouseUp">
        <!-- Slingshot bands -->
        <Line x:Name="LeftBand" Stroke="Black" StrokeThickness="2"/>
        <Line x:Name="RightBand" Stroke="Black" StrokeThickness="2"/>
        <!-- Projectile (Bird) -->
        <Ellipse x:Name="Projectile" Width="20" Height="20" Fill="Red"/>
        <!-- Targets (Pigs) -->
        <Ellipse x:Name="Pig1" Width="30" Height="30" Fill="Green" Canvas.Left="600" Canvas.Top="300"/>
        <Ellipse x:Name="Pig2" Width="30" Height="30" Fill="Green" Canvas.Left="650" Canvas.Top="320"/>
        <!-- Ground -->
        <Rectangle Width="800" Height="50" Fill="Green" Canvas.Top="400"/>
        <Ellipse x:Name="Pig1_Копировать" Width="30" Height="30" Fill="Green" Canvas.Left="567" Canvas.Top="335" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>